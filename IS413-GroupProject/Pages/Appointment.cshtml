@page
@model IS413_GroupProject.Pages.Home.AppointmentModel
@{
}


<h2 class="text-center">Appointments</h2>
<div class="container">

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Type</th>
                <th>Group Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Appointment.Lines)
            {
                <tr>
                    <td class="text-left">@line.Tour.AppointmentDate.ToString("MMMM dd, yyyy")</td>
                    <td class="text-left">@line.Tour.Description</td>
                    <td class="text-center">$@line.Tour.TourType</td>
                    <td class="text-right">@line.Tour.Language</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Searching</a>

    </div>

